{
	"$schema": "../node_modules/@tauri-apps/cli/schema.json",
	"build": {
		"beforeBuildCommand": "yarn build",
		"beforeDevCommand": "yarn dev",
		"devPath": "http://localhost:5173",
		"distDir": "../build"
	},
	"package": {
		"productName": "GlacierKit",
		"version": "1.9.0"
	},
	"tauri": {
		"allowlist": {
			"all": true,
			"protocol": {
				"all": true,
				"assetScope": ["**/*", "$APPDATA/**"]
			},
			"shell": {
				"sidecar": true,
				"scope": [
					{
						"name": "bin/vgmstream-cli",
						"sidecar": true
					}
				],
				"execute": true,
				"all": true,
				"open": true
			},
			"fs": {
				"all": false,
				"writeFile": true,
				"scope": ["**/*"]
			}
		},
		"bundle": {
			"active": true,
			"category": "DeveloperTool",
			"copyright": "",
			"deb": {
				"depends": []
			},
			"externalBin": ["bin/vgmstream/vgmstream-cli"],
			"icon": ["icons/32x32.png", "icons/128x128.png", "icons/128x128@2x.png", "icons/icon.icns", "icons/icon.ico"],
			"identifier": "app.glacierkit",
			"longDescription": "",
			"macOS": {
				"entitlements": null,
				"exceptionDomain": "",
				"frameworks": [],
				"providerShortName": null,
				"signingIdentity": null
			},
			"resources": [
				"bin/vgmstream/swresample-vgmstream-4.dll",
				"bin/vgmstream/avcodec-vgmstream-59.dll",
				"bin/vgmstream/avformat-vgmstream-59.dll",
				"bin/vgmstream/avutil-vgmstream-57.dll",
				"bin/vgmstream/libatrac9.dll",
				"bin/vgmstream/libcelt-0061.dll",
				"bin/vgmstream/libcelt-0110.dll",
				"bin/vgmstream/libg719_decode.dll",
				"bin/vgmstream/libmpg123-0.dll",
				"bin/vgmstream/libspeex-1.dll",
				"bin/vgmstream/libvorbis.dll"
			],
			"shortDescription": "",
			"targets": "all",
			"windows": {
				"certificateThumbprint": null,
				"digestAlgorithm": "sha256",
				"timestampUrl": ""
			}
		},
		"security": {
			"csp": null
		},
		"updater": {
			"active": true,
			"endpoints": ["https://raw.githubusercontent.com/atampy25/glacierkit/master/updates.json"],
			"dialog": false,
			"pubkey": "dW50cnVzdGVkIGNvbW1lbnQ6IG1pbmlzaWduIHB1YmxpYyBrZXk6IDI5OEYzQTUzNUZCODZBNUMKUldSY2FyaGZVenFQS2JydmlWbHhndGo2WXFEZExmVzEvQXJRYk9PekRjb0NoY01RRnBUdEMvNHgK"
		},
		"windows": [
			{
				"fullscreen": false,
				"height": 720,
				"resizable": true,
				"title": "GlacierKit",
				"width": 1280,
				"decorations": false,
				"visible": false
			}
		]
	}
}
